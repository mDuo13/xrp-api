{
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "dist",
		"target": "es2017",
		"module": "commonjs",
		"moduleResolution": "node",
		"allowJs": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"src/**/*.spec.ts"
	]
}
